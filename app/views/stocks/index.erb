<div class="portfolio">
  <h1>Portfolio:</h1>
  <div class="updateForm">
    <label for="">Update Shares:</label>
    <form class="" action="/stocks" method="post">
      <input id="hidden" type="hidden" name="_method" value="PATCH">
      <select class="" name="stock">
      <% @stocks.each do |stock| %>
        <option value="<%= stock.name %>"><%= stock.name %></option>
      <% end %>
      </select>
      <label for="">Shares: <input type="number" name="value" value=""></label>
      <input type="submit" class="btn btn-primary" name="" value="Update">
    </form>
  </div>


<div class="table">
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Symbol</th>
      <th scope="col">Name</th>
      <th scope="col">Shares</th>
      <th scope="col">Info</th>
      <th scope="col">Remove Stock</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.symbol %></td>
        <td><%= stock.name %></td>
        <td><%= stock.shares %></td>
        <td><form class="edit" action="/stocks/<%= stock.id %>" method="get">
          <input type="submit" class="btn btn-primary" name="" value="Stock Info">
        </form></td>
        <td><form class="edit" action="/stocks/<%= stock.id %>" method="post">
          <input id="hidden" type="hidden" name="_method" value="DELETE">
          <input type="submit" id="removeStock" class="btn btn-danger" name="" value="Remove">
        </form></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="divAmount">
  <h2>Yearly Dividends: $<%= Stock.yearly_divs(current_user) %></h2>
</div>

</div>


